<% if current_user.admin? %>
<p id="notice"><%= notice %></p>
<h1>Tickets</h1>
<div class="row">
  <div class="col-sm-12">
    <div class="text-center">
      <%= link_to 'New Ticket', new_ticket_path, class: "btn btn-primary " %>
      <%= link_to 'Tickets Asignados', assignments_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>
<br>
<table>
  <thead>
    <tr>
      <th>Numero</th>
      <th>Name</th>
      <th>Description</th>
      <th>Mostrar</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tickets.each do |ticket| %>
      <tr>
        <td>Ticket <%= ticket.id %></td>
        <td><%= ticket.name %></td>
        <td><%= ticket.description %></td>
        <td><%= link_to 'Show', ticket %></td>
        
          <td><%= link_to 'Edit', edit_ticket_path(ticket), class: "btn btn-success"  %> </td>
         <td><%= link_to 'Destroy', ticket, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-primary"  %></td>
     
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>
