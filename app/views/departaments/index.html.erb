<p id="notice"><%= notice %></p>

<h1>Departaments</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @departaments.each do |departament| %>
      <tr>
        <td><%= departament.name %></td>
        <td><%= departament.description %></td>
        <td><%= link_to 'Show', departament %></td>
        <td><%= link_to 'Edit', edit_departament_path(departament) %></td>
        <td><%= link_to 'Destroy', departament, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

